.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 30px 0
    +above($breakpoints.md)
      padding 80px 0 50px 0
    +above($breakpoints.xxl)
      padding 100px 0 77px 0

  &__title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 25px 0
    +above($breakpoints.md)
      padding 0 0 44px 0
    +above($breakpoints.xxl)
      padding 0 0 54px 0

  &__owner-block
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 40px

  &__img-owner
    width 100px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 130px
    +above($breakpoints.xxl)
      width 140px

  &__text
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 20px 0 30px 0
    +above($breakpoints.md)
      padding 30px 0 40px 0
    +above($breakpoints.xxl)
      padding 40px 0 50px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    width 308px
    position relative
    z-index 1
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      width 500px
    +above($breakpoints.md)
      gap: 10px
      width 550px
    +above($breakpoints.xxl)
      width 620px
      gap: 14px

  &__img
    width 300px
    height: auto
    margin 20px auto 0
    position relative
    z-index 1
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 390px;
      bottom: 141px;
      right: -100px;
    +above($breakpoints.md)
      width: 500px;
      bottom: 82px;
      right: -62px;
    +above($breakpoints.xxl)
      width: 742px;
      bottom: 61px;
      right: -135px;

  &__mark-line
    position: absolute
    width: 181px;
    height: 40px;
    top: 61px;
    left: 61px;
    +above($breakpoints.sm)
      width: 221px;
      height: 100px;
      top: 74px;
      left: -26px;
    +above($breakpoints.md)
      width: 265px;
      height: 96px;
      top: 124px;
      left: -30px;
    +above($breakpoints.xxl)
      width: 488px;
      height: 96px;
      top: 212px;
      left: -59px;

.about-item-answer
  width 280px !important
  +above($breakpoints.sm)
    width 486px !important
  +above($breakpoints.md)
    width 530px !important
  +above($breakpoints.xxl)
    width 614px !important

.about-item
  width 280px !important
  +above($breakpoints.sm)
    width 240px !important
  +above($breakpoints.md)
    width 260px !important
  +above($breakpoints.xxl)
    width 300px !important