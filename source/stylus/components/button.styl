.btn
  height: 50px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #fff
  border-radius: 75px
  // border: 3px solid #fff;
  text-transform: uppercase
  box-shadow: 0px 33px 70px 0px rgba(255, 6, 0, 0.2);
  background: rgb(227, 5, 0)
  font-family: "Roboto-SemiBold"
  font-weight: 600
  font-size: 13px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 14px;
    height: 55px;
  +above($breakpoints.md)
    height: 60px;
    font-size: 16px;
  +above($breakpoints.xxl)
    letter-spacing: 2px
    font-size: 18px;
    height: 65px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

  &--secondary
    background: #fff
    color: #110457
