.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #F5F5F5

  &__container
    position relative
    padding 240px 0 20px 0
    +above($breakpoints.sm)
      padding 250px 0 30px 0
    +above($breakpoints.md)
      padding 300px 0 40px 0
    +above($breakpoints.xxl)
      padding 407px 0 50px 0

  &__title,
  &__sub-title,
  &__text
    text-align: center

  &__sub-title
    padding 15px 0 20px 0
    +above($breakpoints.sm)
      padding 15px 0 25px 0
    +above($breakpoints.md)
      padding 20px 0 30px 0
    +above($breakpoints.xxl)
      padding 20px 0 40px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    padding 15px 0 20px 0
    +above($breakpoints.sm)
      padding 25px 0 50px 0
      flex-direction: row
      justify-content center
    +above($breakpoints.md)
      padding 30px 0 90px 0
      gap: 10px
    +above($breakpoints.xxl)
      padding 30px 0 104px 0
      gap: 14px

  &__mark-line
    position: absolute
    width: 201px;
    height: 36px;
    top: 233px;
    left: -7px;
    +above($breakpoints.sm)
      width: 249px;
      height: 96px;
      top: 215px;
      left: 231px;
    +above($breakpoints.md)
      width: 313px;
      height: 96px;
      top: 268px;
      left: 318px;
    +above($breakpoints.xxl)
      width: 534px;
      height: 96px;
      top: 389px;
      left: 301px;

  &__top
    position: absolute
    z-index 2
    width 100%
    text-align: center
    background-color #fff
    border-radius: 20px
    padding 15px 10px
    top: -80px
    +above($breakpoints.sm)
      top: -40px
      padding 30px 10px 46px 10px
    +above($breakpoints.md)
      top: -60px
      padding 40px 10px 66px 10px
    +above($breakpoints.xxl)
      top: -88px
      padding 50px 10px 76px 10px

  &__top-sub-title
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0

  &__top-form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
    +above($breakpoints.md)
      gap: 10px
    +above($breakpoints.xxl)
      gap: 14px

.city-item
  width 260px !important
  +above($breakpoints.sm)
    width 175px !important
  +above($breakpoints.md)
    width 200px !important
  +above($breakpoints.xxl)
    width 280px !important

.city-item-2
  width 260px !important
  +above($breakpoints.sm)
    width 220px !important
  +above($breakpoints.md)
    width 260px !important
  +above($breakpoints.xxl)
    width 300px !important
