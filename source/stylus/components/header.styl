.header
  &__container
    display: flex
    flex-direction: row
    align-items: center
    justify-content space-between

  &__brand
    display: flex
    flex-direction: row
    align-items: center
    gap: 20px

  &__text
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 60px
    +above($breakpoints.md)
      width 70px
    +above($breakpoints.xxl)
      width 80px

  &__connection
    display: flex
    justify-content center
    align-items: center
    background-color #fff
    border-radius: 20px
    gap: 5px
    width 150px
    height: 25px
    +above($breakpoints.sm)
      width 180px
      height: 30px
    +above($breakpoints.md)
      gap: 10px
      width 200px
      height: 35px
    +above($breakpoints.xxl)
      width 230px
      height: 40px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 16px
      height: 16px
