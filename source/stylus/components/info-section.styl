.info-section
  background-image: url('../images/info-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fff

  &__container
    color: #fff
    position relative
    padding 20px 0 10px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 70px 0 70px 0
    +above($breakpoints.xxl)
      padding 90px 0 83px 0

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 20px 0 25px 0
    +above($breakpoints.md)
      padding 25px 0 25px 0
    +above($breakpoints.xxl)
      padding 30px 0 30px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    width 308px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      width 460px
    +above($breakpoints.md)
      gap: 10px
      width 500px
    +above($breakpoints.xxl)
      width 620px
      gap: 14px

  &__img
    width 260px
    height: auto
    margin 15px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 300px;
      bottom: 106px;
      right: 0;
    +above($breakpoints.md)
      width: 420px;
      bottom: 115px;
      right: 0;
    +above($breakpoints.xxl)
      width: 520px;
      bottom: 138px;
      right: -12px;

.info-item
  width 280px !important
  +above($breakpoints.sm)
    width 220px !important
  +above($breakpoints.md)
    width 240px !important
  +above($breakpoints.xxl)
    width 300px !important
