.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: right
  background-size: cover
  background-color #ededed
  +above($breakpoints.sm)
    background-position: center

  &__container
    position relative
    padding 13px 0 10px 0
    +above($breakpoints.sm)
      padding 13px 0 50px 0
    +above($breakpoints.md)
      padding 13px 0 80px 0
    +above($breakpoints.xxl)
      padding 13px 0 108px 0

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 15px 0 16px 0
    +above($breakpoints.sm)
      padding 30px 0 16px 0
    +above($breakpoints.md)
      padding 50px 0 16px 0
    +above($breakpoints.xxl)
      padding 83px 0 16px 0

  &__sub-title
    +above($breakpoints.xxl)
      line-height 126% !important

  &__bottom
    position relative
    z-index 1
    color: #fff
    background: linear-gradient(165.75deg, rgb(17, 4, 87) 37.502%,rgb(168, 1, 41) 145.05%)
    border-radius: 20px
    padding 20px 15px 20px 15px
    text-align: center
    margin-top 20px
    width 308px
    +above($breakpoints.sm)
      padding 25px 25px 25px 25px
      width 308px
    +above($breakpoints.md)
      padding 30px 30px 30px 30px
      margin-top 25px
      width 360px
    +above($breakpoints.xxl)
      width 380px
      margin-top 30px
      padding 33px 40px 39px 40px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    padding-top 15px
    +above($breakpoints.md)
      gap: 10px
      padding-top 20px
    +above($breakpoints.xxl)
      padding-top 26px
      gap: 14px

  &__img
    width 300px
    height: auto
    margin 10px auto 0
    +above($breakpoints.sm)
      position: absolute
      width: 390px;
      bottom: 50px;
      right: 0;
    +above($breakpoints.md)
      width: 550px;
      bottom: 47px;
      right: 0;
    +above($breakpoints.xxl)
      width: 761px;
      bottom: 55px;
      right: -26px;

  &__img-shadow
    position: absolute
    filter: blur(350px);
    background: rgba(227, 5, 0, 0.5)
    width: 230px;
    height: 230px;
    bottom: 50px;
    left: 0;
    +above($breakpoints.sm)
      width: 300px;
      height: 300px;
      bottom: 51px;
      left: 316px;
    +above($breakpoints.md)
      width: 400px;
      height: 400px;
      bottom: 77px;
      left: 360px;
    +above($breakpoints.xxl)
      width: 545px;
      height: 545px;
      bottom: 67px;
      left: 450px;

  &__mark-line
    position: absolute
    width: 157px;
    height: 27px;
    left: 146px;
    top: 149px;
    +above($breakpoints.sm)
      width: 221px;
      height: 44px;
      left: -8px;
      top: 225px;
    +above($breakpoints.md)
      width: 260px;
      height: 48px;
      left: -11px;
      top: 282px;
    +above($breakpoints.xxl)
      width: 310px;
      height: 54px;
      left: 0;
      top: 410px;

.main-sub-title-padding
  +above($breakpoints.xxl)
    padding-left 23px
