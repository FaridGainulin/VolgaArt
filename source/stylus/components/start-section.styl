.start-section
  background-image: url('../images/start-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #1F1364

  &__container
    color: #fff
    position relative
    z-index 1
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 60px 0
    +above($breakpoints.md)
      padding 70px 0 90px 0
    +above($breakpoints.xxl)
      padding 100px 0 148px 0

  &__title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 25px 0
    +above($breakpoints.md)
      padding 0 0 30px 0
    +above($breakpoints.xxl)
      padding 0 0 36px 0

  &__items
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 10px
      +above($breakpoints.md)
        gap: 15px
      +above($breakpoints.xxl)
        gap: 20px

  &__item
    width 290px !important
    display: flex
    flex-direction: row
    gap: 10px
    +above($breakpoints.sm)
      width 500px !important
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 22px

  &__img-smear
    position: absolute
    z-index -1
    width: 420px;
    height: auto;
    right: -93px;
    bottom: -138px;
    +above($breakpoints.sm)
      width: 670px;
      right: -197px;
      bottom: -329px;
    +above($breakpoints.md)
      width: 950px;
      right: -335px;
      bottom: -488px;
    +above($breakpoints.xxl)
      width: 1376px;
      right: -530px;
      bottom: -733px;

  &__img
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 370px;
      bottom: 20px;
      right: 38px;
    +above($breakpoints.md)
      width: 493px;
      bottom: 33px;
      right: 46px;
    +above($breakpoints.xxl)
      width: 693px;
      bottom: 53px;
      right: 33px;

  &__mark-line
    position: absolute
    width: 185px;
    height: 40px;
    top: 11px;
    left: 21px;
    +above($breakpoints.sm)
      width: 226px;
      height: 95px;
      top: 5px;
      left: -20px;
    +above($breakpoints.md)
      width: 290px;
      height: 96px;
      top: 37px;
      left: -24px;
    +above($breakpoints.xxl)
      width: 488px;
      height: 96px;
      top: 77px;
      left: -37px;